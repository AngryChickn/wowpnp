<p id="notice"><%= notice %></p>

<h1>Npcs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>Rasse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @npcs.each do |npc| %>
      <tr>
        <td><%= link_to npc.name, npc %></td>
        <td><%= npc.level %></td>
        <td><%= npc.race_id || '?' %></td>
        <td><%= link_to 'Bearbeiten', edit_npc_path(npc) %></td>
        <td><%= link_to 'Exterminate!', npc, method: :delete, data: { confirm: 'You sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

